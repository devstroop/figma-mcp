{
  "name": "@devstroop/figma-mcp",
  "version": "1.0.0",
  "description": "MCP (Model Context Protocol) server for Figma REST API integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "figma-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:remote": "node dist/remote.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "figma",
    "mcp",
    "model-context-protocol",
    "ai",
    "design",
    "api"
  ],
  "author": "Devstroop Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devstroop/figma-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
